### from collections import Counter 
file = open("all.txt", "rt")
data=file.read()
words=data.split()
Counter = Counter(words)
Counter.most_common(10)

###Remove stop words
stop_words = set(stopwords.words('english')) 
fil = [w for w in words if not w in stop_words] 

from collections import Counter
